
{% import "components/general.njk" as c %}

{% extends "content.njk" %}

{% block content %}
    
    <article>
        {{ c.imageLayout(images) }}
    </article>

    {% if listData %}
        <div class="section">
            <h2>{{ listTitle }}</h2>
            <ul class="listItems">
                {% for item in collections[listData] %}
                    {{ c.listItem(item.data.date, item.data.title, item.data.description, item.url) }}
                {% endfor %}
            </ul>
            <div class="section__button">
                {{ c.button(listButtonURL, listButtonLabel) }}
            </div>
        </div>
    {% endif %}

    <div class="section">
        <h2>{{ cardsTitle }}</h2>
        <div class="grid">
            {% for item in collections[cardsData] | limit(cardsLimit) %}
                {{ c.card(item.data.cardImage, item.data.title, item.data.description, item.url) }}
            {% endfor %}
        </div>
        {% if cardsButtonLabel %}
            <div class="section__button">
                {{ c.button(cardsButtonURL, cardsButtonLabel) }}
            </div>
        {% endif %}
    </div>

{% endblock content %}