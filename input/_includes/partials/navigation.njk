<nav>
    <a href="/">Clean</a>

    <ul class="nav__list">
        {% for page in collections.navigation | sortByOrder() %}
            <li><a href="{{ page.url | absoluteUrl }}">{{ page.data.page_title }}</a></li>
        {% endfor %}
    </ul>

    {% if showLegal %}
        <ul class="nav__list">
            {% for legalPage in collections.legal %}
                <li><a href="{{ legalPage.url | absoluteUrl }}">{{ legalPage.data.page_title }}</a></li>
            {% endfor %}
        </ul>
    {% endif %}
    
</nav>